@* Pages/Reservas.razor *@
@page "/reservas"
@inject ReservaServicio reservaServicio
@inject IJSRuntime jsRuntime
<h3>Reservas</h3>
<NavLink class="nav-link" href="reserva/agregar">
<span class="oi oi-plus" aria-hidden="true">Agregar reserva</span>
</NavLink>
<div class="row">
<div class="col-md-6">
<table class="table table-hover">
<thead>
<tr>
<th>ReservaID</th>
<th>HabitacionId</th>
<th>ClienteId</th>
<th>InicioReserva</th>
<th>FinReserva</th>
<th>DiasReserva</th>
<th>Habitacion</th>
<th>Cliente</th>
</tr>
</thead>
<tbody>
@foreach (var reserva in reservas)
{
<tr>
<td>@reserva.Id</td>
<td>@reserva.HabitacionId</td>
<td>@reserva.Cliente.Id</td>
<td>@reserva.InicioReserva</td>
<td>@reserva.FinReserva</td>
<td>@reserva.DiasReserva</td>
<td>@reserva.Habitacion</td>
<td>@reserva.Cliente.NombreCompleto</td>


<td>
<a
href="reserva/editar/@reserva.Id"
class="btn btn-success">Editar</a>
<a class="btn btn-danger" @onclick="async ()=> await
Borrar(reserva)">Borrar</a>
</td>
</tr>
}
</tbody>
</table>
</div>

</div>
@code {
private List<Reserva> reservas = new();
protected override void OnInitialized(){
reservas = reservaServicio.ObtenerTodo();
}
private async Task Borrar(Reserva reserva) {
bool confirmed = await jsRuntime.InvokeAsync<bool>("confirm", "Estas seguro????");
if (confirmed)
if(reservaServicio.Borrar(reserva.Id))
reservas.Remove(reserva);
}
}